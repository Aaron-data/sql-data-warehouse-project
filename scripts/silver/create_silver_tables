--Creating Silver Tables--

IF OBJECT_ID ('silver.crm_cust_info','U') IS NOT NULL
	DROP TABLE silver.crm_cust_info;

CREATE TABLE silver.crm_cust_info (
cst_id INT,
cst_key NVARCHAR(50),
cst_firstname NVARCHAR(50),
cst_lastname NVARCHAR (50),
cst_marital_status NVARCHAR (50), 
cst_gndr NVARCHAR (50),
cst_create_date DATE,
dwh_create_date DATETIME2 DEFAULT GETDATE()
);

IF OBJECT_ID ('silver.crm_prd_info','U') IS NOT NULL
	DROP TABLE silver.crm_prd_info;

CREATE TABLE silver.crm_prd_info (
prd_id INT,
prd_key NVARCHAR(50),
prd_nm NVARCHAR (50),
prd_cost DECIMAL(10,2),
prd_line VARCHAR (10),
prd_start_dt DATETIME,
prd_end_dt DATETIME,
dwh_create_date DATETIME2 DEFAULT GETDATE()
);

IF OBJECT_ID ('silver.crm_sales_details','U') IS NOT NULL
	DROP TABLE silver.crm_sales_details;

CREATE TABLE silver.crm_sales_details (
sls_order_num VARCHAR(50),
sls_prd_key VARCHAR(50),
sls_cust_id INT,
sls_order_dt INT,
sls_ship_dt INT,
sls_due_dt INT,
sls_sales DECIMAL(10,2),
sls_quantity INT,
sls_price DECIMAL(10,2),
dwh_create_date DATETIME2 DEFAULT GETDATE()
);

IF OBJECT_ID ('silver.erp_cust_details','U') IS NOT NULL
	DROP TABLE silver.erp_cust_details;

CREATE TABLE silver.erp_cust_details(
cid VARCHAR(50),
bdate DATE,
gen VARCHAR(10),
dwh_create_date DATETIME2 DEFAULT GETDATE()
);

IF OBJECT_ID ('silver.erp_loc_details','U') IS NOT NULL
	DROP TABLE silver.erp_loc_details;

CREATE TABLE silver.erp_loc_details(
cid VARCHAR(50),
cntry VARCHAR(50),
dwh_create_date DATETIME2 DEFAULT GETDATE()
);

IF OBJECT_ID ('silver.erp_prd_cat_details','U') IS NOT NULL
	DROP TABLE silver.erp_prd_cat_details;

CREATE TABLE silver.erp_prd_cat_details(
id VARCHAR(10),
cat VARCHAR(50),
subcat VARCHAR(50),
maintenance VARCHAR(10),
dwh_create_date DATETIME2 DEFAULT GETDATE()
);
